<%- include('./partials/_header'); %>


<main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
      <h1 class="h2">Perfil Paciente</h1>
      <div class="btn-toolbar mb-2 mb-md-0">
      </div>
    </div>
    

<div class="container rounded bg-white mt-5 mb-5">
    <div class="row">
        <div class="col-md-3 card" style="border-top: 3px solid #007bff;">
            <div class="d-flex flex-column align-items-center text-center p-3 py-5"><img class="rounded-circle mt-5" width="150px" src="https://saluddigitalsso.cl/images/<%= data.Avatar %>"><span class="font-weight-bold"><%= data.Nombres %></span><span class="text-black-50"><%= data.RunCompleto %></span><span> </span></div>
        </div>
        <div class="col-md-9 card">
            <div class="mt-2">
                <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
                    <li class="nav-item" role="presentation">
                      <button class="nav-link active" id="home-tab" data-bs-toggle="tab" data-bs-target="#home-tab-pane" type="button" role="tab" aria-controls="home-tab-pane" aria-selected="true">Inicio</button>
                    </li>
                    <li class="nav-item" role="presentation">
                      <button class="nav-link" id="profile-tab" data-bs-toggle="tab" data-bs-target="#pills-profile" type="button" role="tab" aria-controls="profile-tab-pane" aria-selected="false">Controles</button>
                    </li>
                  </ul>
              </div>
            <div class="card-body">
                <div class="tab-content" id="myTabContent">
                    <div class="tab-pane fade show active" id="home-tab-pane" role="tabpanel" aria-labelledby="home-tab" tabindex="0">
                        <div class="row">
                            <div class="col-md-6"><label class="labels">Ficha</label><input type="text" class="form-control" value="<%= data.Ficha %>" readonly></div>
                            <div class="col-md-6"><label class="labels">Controles</label><input type="text" class="form-control" readonly value="<%= data.CantidadControles %>"></div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-md-12"><label class="labels">Eva Ingreso</label><input type="text" class="form-control" value="<%= data.EvaIngreso %>" readonly></div>
                            <div class="col-md-12"><label class="labels">Ps Ingreso</label><input type="text" class="form-control" value="<%= data.PsIngreso %>" readonly></div>
                            <div class="col-md-12"><label class="labels">EdadIngreso</label><input type="text" class="form-control" value="<%= data.EdadIngreso %>" readonly></div>
                            <div class="col-md-12"><label class="labels">Diagnostico</label><input type="text" class="form-control" value="<%= data.Diagnostico %>" readonly></div>
                            <div class="col-md-12"><label class="labels">Observaciones</label><textarea" class="form-control" readonly><%= data.Observaciones %></textarea></div>
                        </div>
                    </div>
                    <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab" tabindex="0">
                        <div class="table-responsive">
                            <table id="controles" class="table table-striped table-sm table-hover">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Run</th>
                                        <th>Tipo de Control</th>
                                        <th>Fecha del Control</th>
                                        <th>Edad</th>
                                        <th>Observaciones</th>
                                    </tr>
                                </thead>
                            <tbody>
                                <% if(dataControls) { %>
                                    <% for(var i=0; i < dataControls.length; i++) { %>
                                        <tr>
                                          <td><%= dataControls[i].IdControl %></td>
                                          <td><%= dataControls[i].Run %></td>
                                          <td><%= dataControls[i].TipoControl %></td>
                                          <td><%= dataControls[i].FechaControl %></td>
                                          <td><%= dataControls[i].EdadControl %></td>
                                          <td><%= dataControls[i].Observaciones %></td>
                                        </tr>
                                        <% } %>
                                <%}%>
                            </tbody>
                            </table>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="p-3 py-5">
            </div>
        </div>
    </div>
</div>
</div>
</div>
</main>

<script>
    $(document).ready(function () {
$('#controles').DataTable({
  "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.16/i18n/Spanish.json"
                },
                order: [[0, 'desc']]
} );
    });

</script>
  <%- include('./partials/_footer'); %>
