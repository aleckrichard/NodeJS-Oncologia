<%- include('./partials/_header'); %>
<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.8.0/chart.min.js" integrity="sha512-sW/w8s4RWTdFFSduOTGtk4isV1+190E/GghVffMA9XczdJ2MDzSzLEubKAs5h0wzgSJOQTRYyaz73L3d6RtJSg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

<main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
    <div class="pt-3 pb-2 mb-3 border-bottom">
        <h3 class="text-center">Bienvenido <%= userName %> al Sistema de Cuidados Paliativos</h3>

    </div>


<div class="row mb-5">
    <div class="card border-primary col-lg-3 col-6">
        <div class="card-body row">
            <div class="col-md-4"><i class="text-primary fa-solid fa-users fa-3x"></i></div>
          <div class="col-md-8"><h4 class="card-title"><%= dataTotalsDashboard.Total %> Pacientes</h4></div>
        </div>
      </div>
    <div class="card col-lg-3 col-6" style="border-color:blueviolet">
        <div class="card-body row">
            <div class="col-md-4"><i class="fa-solid fa-venus fa-3x" style="color:blueviolet"></i></div>
          <div class="col-md-8"><h4 class="card-title"><%= dataTotalsDashboard.Mujeres %> Mujeres</h4></div>
        </div>
      </div>
      <div class="card col-lg-3 col-6" style="border-color:#009688">
          <div class="card-body row">
              <div class="col-md-4"><i class="fa-solid fa-mars fa-3x" style="color:#009688"></i></div>
            <div class="col-md-8"><h4 class="card-title"><%= dataTotalsDashboard.Hombres %> Hombres</h4></div>
          </div>
        </div>
        <div class="card border-info col-lg-3 col-6">
            <div class="card-body row">
                <div class="col-md-4"><i class="text-info fa-solid fa-comment-medical fa-3x"></i></div>
              <div class="col-md-8"><h4 class="card-title"><%= dataTotalsDashboard.CantidadControles %> Controles</h4></div>
            </div>
        </div>
</div>
<div class="card mb-5">
    <div class="row">
        <div class="col-md-6">
            <h5 class="text-left text-secondary ms-3 mt-2"><i class="fa-solid fa-chart-line"></i> Cantidad de Controles por Fecha</h5>    
        </div>
        <div class="col-md-6">
            <h5 class="text-end text-secondary me-3 mt-2"><i class="fa-solid fa-chart-line"></i> Cantidad de Controles por Tipo de Control</h5>    
        </div>
    </div>
    <div class="card-body row">
        <div class="col-md-8">
            <canvas id="line-chart" width="800" height="350"></canvas>
        </div>
        <div class="col-md-4">
            <% if(dataQuantityControls) { %>
            
            <div class="d-flex align-items-center p-3 my-3 text-white bg-primary rounded shadow-sm">
                <img class="me-3" src="https://getbootstrap.com/docs/5.2/assets/brand/bootstrap-logo-white.svg" alt="" width="48" height="38">
                <div class="lh-1">
                  <h1 class="h6 mb-0 text-white lh-1"><%= dataQuantityControls[0].TipoControl %></h1>
                  <b><%= dataQuantityControls[0].Cantidad %></b>
                </div>
              </div>
              <div class="d-flex align-items-center p-3 my-3 text-white bg-info rounded shadow-sm">
                  <img class="me-3" src="https://getbootstrap.com/docs/5.2/assets/brand/bootstrap-logo-white.svg" alt="" width="48" height="38">
                  <div class="lh-1">
                    <h1 class="h6 mb-0 text-white lh-1"><%= dataQuantityControls[1].TipoControl %></h1>
                    <b><%= dataQuantityControls[1].Cantidad %></b>
                  </div>
                </div>
                <div class="d-flex align-items-center p-3 my-3 text-white bg-danger rounded shadow-sm">
                    <img class="me-3" src="https://getbootstrap.com/docs/5.2/assets/brand/bootstrap-logo-white.svg" alt="" width="48" height="38">
                    <div class="lh-1">
                      <h1 class="h6 mb-0 text-white lh-1"><%= dataQuantityControls[2].TipoControl %></h1>
                      <b><%= dataQuantityControls[2].Cantidad %></b>
                    </div>
                  </div>
                  <div class="d-flex align-items-center p-3 my-3 text-white bg-warning rounded shadow-sm">
                      <img class="me-3" src="https://getbootstrap.com/docs/5.2/assets/brand/bootstrap-logo-white.svg" alt="" width="48" height="38">
                      <div class="lh-1">
                        <h1 class="h6 mb-0 text-white lh-1"><%= dataQuantityControls[3].TipoControl %></h1>
                        <b><%= dataQuantityControls[3].Cantidad %></b>
                      </div>
                    </div>
                    <div class="d-flex align-items-center p-3 my-3 text-white bg-secondary rounded shadow-sm">
                        <img class="me-3" src="https://getbootstrap.com/docs/5.2/assets/brand/bootstrap-logo-white.svg" alt="" width="48" height="38">
                        <div class="lh-1">
                          <h1 class="h6 mb-0 text-white lh-1"><%= dataQuantityControls[4].TipoControl %></h1>
                          <b><%= dataQuantityControls[4].Cantidad %></b>
                        </div>
                      </div>
                      <%}%>
        </div>
    </div>
</div>

<div class="table-responsive card">
        <h5 class="text-left text-secondary ms-3 mt-2"><i class="fa-solid fa-chart-line"></i> Últimos Controles</h5>
    <div class="card-body">
        <table id="example" class="table table-striped table-sm table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Fecha</th>
                    <th>Run</th>
                    <th>Nombres</th>
                    <th>Tipo</th>
                    <th>Observaciones</th>
                    <th>Mas Información</th>
                </tr>
            </thead>
        <tbody>
            <% if(dataLastControls) { %>
                <% for(var i=0; i < dataLastControls.length; i++) { %>
                    <tr>
                      <td><%= dataLastControls[i].IdControl %></td>
                      <td><%= dataLastControls[i].FechaControl %></td>
                      <td><%= dataLastControls[i].Run %></td>
                      <td><%= dataLastControls[i].Nombres %></td>
                      <td><%= dataLastControls[i].TipoControl %></td>
                      <td><%= dataLastControls[i].Observaciones %></td>
                      <td><a href="profile/<%= dataLastControls[i].RunSinDv %>" class="btn btn-primary btn-sm">Ver Detalle</a>
                    </tr>
                    <% } %>
            <%}%>
        </tbody>
      </table>
    </div>
</div>

</main>

<script>
    new Chart(document.getElementById("line-chart"), {
  type: 'line',
  data: {
    labels: [<% if(dataQuantityControlsByDate) { %>
    <% for(var i=0; i < dataQuantityControlsByDate.length; i++) { %>
        '<%= dataQuantityControlsByDate[i].FechaControl %>',
        <% } %>
<%}%>],
    datasets: [{ 
        data: [<% if(dataQuantityControlsByDate) { %>
    <% for(var i=0; i < dataQuantityControlsByDate.length; i++) { %>
        <%= dataQuantityControlsByDate[i].Cantidad %>,
        <% } %>
<%}%>],
        label: "Controles",
        borderColor: "#3e95cd",
        fill: false
      }
    ]
  },
  options: {
    title: {
      display: true,
      text: 'Cantidad de controles por Fecha'
    }
  }
});
</script>



  <%- include('./partials/_footer'); %>
