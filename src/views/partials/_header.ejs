      <script>
        $(document).ready(function(){   
          let lista = "";   
      
          let urlPath = new URL(document.URL)
                          let urlArray = urlPath.pathname.split("/");
                          let newUrl = null

                          if (urlArray[1] == 'profile') {
                            newUrl = ''
                          }else{
                            newUrl = 'profile/'
                          }
            $("#buscador").keyup(function () {
            let valor = $('#buscador').val();
            $.ajax({
                    type:'GET',
                    url:'/searchPatient/'+valor, 
                    dataType: "json",
                    success:function(data){
                        if (data.message == "error") {
                          $('#resultado').html("No hay datos")
                        } else {
                            for (let i = 0; i < data.length; i++) {
                              //lista += data[i].Nombres + "<br>";
                              document.getElementById("resultado").innerHTML = '<a class="nav-link text-white align-text-bottom" href="'+newUrl+data[i].Run+'">'+data[i].Nombres+'</a>';
                            }
                            
                            
                        }
                            
                    }
                });
          });
      
      
        });
        </script>
  

  

        